{
  "name": "mag-bridge",
  "version": "0.0.0",
  "main": "main.js",
  "private": true,
  "scripts": {
    "install-dependencies": "npm i",
    "ng": "ng",
    "serve-angular-hmr": "ng serve --hmr --port 4200",
    "build-angular": "ng build --base-href ./",
    "test-angular": "ng test",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "dev-frontend": "concurrently \"npm run serve-angular-hmr\" \"wait-on http://localhost:4200 && NODE_ENV=development electron .\"",
    "dev-backend": "cd ../../ && .venv/bin/python -m uvicorn backend.main:app --reload",
    "dev": "concurrently \"npm run dev-backend\" \"npm run dev-frontend\"",
    "build:win": "npm run build-angular && electron-builder --win",
    "build:mac": "npm run build-angular && electron-builder --mac",
    "build:linux": "npm run build-angular && electron-builder --linux"
  },
  "build": {
    "appId": "com.github.bridge",
    "productName": "Mag Bridge",
    "directories": {
      "output": "dist/electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/cdk": "20.2.9",
    "@angular/common": "20.3.0",
    "@angular/compiler": "20.3.0",
    "@angular/core": "20.3.0",
    "@angular/forms": "20.3.0",
    "@angular/material": "20.2.9",
    "@angular/platform-browser": "20.3.0",
    "@angular/router": "20.3.0",
    "rxjs": "7.8.0",
    "tslib": "2.3.0",
    "zone.js": "0.15.0"
  },
  "devDependencies": {
    "@angular/build": "20.3.5",
    "@angular/cli": "20.3.5",
    "@angular/compiler-cli": "20.3.0",
    "@types/jasmine": "5.1.0",
    "concurrently": "9.2.1",
    "electron": "38.2.2",
    "electron-builder": "25.1.8",
    "electron-reload": "2.0.0-alpha.1",
    "jasmine-core": "5.9.0",
    "karma": "6.4.0",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage": "2.2.0",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "typescript": "5.9.2",
    "wait-on": "9.0.1"
  }
}
