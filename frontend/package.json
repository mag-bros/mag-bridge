{
  "name": "mag-bridge",
  "version": "0.0.0",
  "main": "main.js",
  "private": true,
  "homepage": "https://github.com/mag-bros/mag-bridge.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/mag-bros/mag-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/mag-bros/mag-bridge/issues"
  },
  "author": {
    "name": "Mag Bros",
    "email": "magbridge.dev@gmail.com"
  },
  "contributors": [],
  "scripts": {
    "ng": "ng",
    "install-dependencies": "npm i",
    "format-code": "prettier --write \"src/**/*.{html,ts,js,scss}\"",
    "serve-reloader": "ng serve --hmr --port 4200",
    "build:prod": "ng build --configuration production",
    "build:dev": "ng build --configuration development",
    "test-angular": "ng test",
    "dev": "concurrently \"npm run serve-reloader\" \"wait-on http://localhost:4200 && NODE_ENV=development MANAGE_BACKEND=1 electron .\"",
    "dev-backend": "cd ../ && .venv/bin/python -m uvicorn backend:app --reload"
  },
  "build": {
    "appId": "com.github.magbridge",
    "productName": "MagBridge",
    "copyright": "Copyright Â© 2025 Mag Bros",
    "directories": {
      "output": "build/app"
    },
    "files": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "frontend/**/*",
          "backend/**/*"
        ]
      },
      "main.js",
      "preload.js",
      "logging.js",
      "app-config.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/backend/",
        "to": "backend"
      }
    ],
    "extraMetadata": {
      "main": "main.js",
      "env": {
        "NODE_ENV": "production",
        "APP_ENV": "production"
      }
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/cdk": "^21.0.2",
    "@angular/common": "^21.0.3",
    "@angular/compiler": "^21.0.3",
    "@angular/core": "^21.0.3",
    "@angular/forms": "^21.0.3",
    "@angular/material": "^21.0.2",
    "@angular/platform-browser": "^21.0.3",
    "@angular/router": "^21.0.3",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.3",
    "@types/jasmine": "~5.1.13",
    "concurrently": "^9.2.1",
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.7.4",
    "typescript": "~5.9.3",
    "wait-on": "^9.0.3"
  }
}